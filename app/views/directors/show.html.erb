<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Director #<%= @director.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Image url</dt>
              <dd><%= @director.image_url %></dd>

              <dt>Bio</dt>
              <dd><%= @director.bio %></dd>

              <dt>Dob</dt>
              <dd><%= @director.dob %></dd>

              <dt>Name</dt>
              <dd><%= @director.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/directors" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/directors/<%= @director.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_director/<%= @director.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>



      <ul class="list-group">
        <li class="list-group-item list-group-item-success">Filmography</li>
        <% @director.movies.each do |movie| %>
          <li class="list-group-item">
            <%= movie.title %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
