<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actor #<%= @actor.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Image url</dt>
              <dd><%= @actor.image_url %></dd>

              <dt>Bio</dt>
              <dd><%= @actor.bio %></dd>

              <dt>Dob</dt>
              <dd><%= @actor.dob %></dd>

              <dt>Name</dt>
              <dd><%= @actor.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/actors" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
        <li class="list-group-item list-group-item-success">Filmography</li>
        <% @actor.roles.each do |role| %>
          <li class="list-group-item">
            <%= role.character_name %>
          </li>
        <% end %>
      </ul>


    </div>
  </div>
</div>

<!-- End responsive panel example -->
